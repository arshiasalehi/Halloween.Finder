<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Party Name -->
    <TextView
        android:id="@+id/partyNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Party Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attendButton"
        app:layout_constraintHorizontal_chainStyle="spread_inside" />

    <!-- Party Location -->
    <TextView
        android:id="@+id/partyLocationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Party Location"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/partyNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attendButton" />

    <!-- Party Date -->
    <TextView
        android:id="@+id/partyDateTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Party Date"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/partyLocationTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attendButton" />

    <!-- Party Description -->
    <TextView
        android:id="@+id/partyDescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Party Description"
        android:textSize="14sp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/partyDateTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/attendButton" />

    <!-- Attend Button -->
    <Button
        android:id="@+id/attendButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attend"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
