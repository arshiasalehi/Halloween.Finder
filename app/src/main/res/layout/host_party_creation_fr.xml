<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party Name"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edt_party_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter party name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party Date"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edt_party_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter party date (e.g., 2024-12-31)"
                android:inputType="date" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party Description"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/edt_party_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter party description"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btn_create_party"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Create Party"
                android:layout_marginTop="24dp" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>
